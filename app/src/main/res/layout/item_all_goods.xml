<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="70dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/goods_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:textSize="16sp"
        android:textColor="@color/grey_333333"
        android:text="名称aaaaaaaaaaaa"/>
    <TextView
        android:id="@+id/barcode_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/grey_333333"
        android:text="201752546456456465"/>
    <TextView
        android:id="@+id/classify_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:textSize="16sp"
        android:textColor="@color/grey_333333"
        android:gravity="center"
        android:text="爆炒"/>
    <TextView
        android:id="@+id/price_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/little_red"
        android:text="20.00"/>
    <TextView
        android:id="@+id/inventory_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/grey_333333"
        android:text="1000"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/edit_goods_tv"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/grey_666666"
            android:text="编辑"/>

        <Button
            android:id="@+id/price_tag_tv"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/grey_666666"
            android:text="标价签"/>

    </LinearLayout>

</LinearLayout>
