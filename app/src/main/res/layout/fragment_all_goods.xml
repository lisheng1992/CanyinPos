<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                   xmlns:app="http://schemas.android.com/apk/res-auto"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/head_black">

            <android.support.v7.widget.CardView
                android:id="@+id/find_goods_cd"
                android:layout_width="450dp"
                android:layout_height="50dp"
                android:hint="请输入条形码/商品名称"
                android:layout_centerInParent="true"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/find_goods_bg"
                            android:layout_gravity="center"/>
                    </FrameLayout>
                    <EditText
                        android:id="@+id/classify_name_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/grey_666666"
                        android:textSize="@dimen/font_size_14"
                        android:background="@null"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                style="@style/White_18"
                android:layout_toLeftOf="@+id/classify_ll"
                android:layout_centerVertical="true"
                android:text="类别: "/>

            <LinearLayout
                android:id="@+id/classify_ll"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/find_goods_cd"
                android:layout_marginRight="50dp"
                android:background="@drawable/white_garyborder_shape">

                <TextView
                    android:id="@+id/what_classify_tv"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/grey_666666"
                    android:gravity="center"
                    android:text="全部"/>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:src="@color/color_dddddd"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_fbfbfb"
                    android:layout_margin="1dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/below_arrow_bg"
                        android:layout_gravity="center"/>
                </FrameLayout>
            </LinearLayout>

            <Button
                android:id="@+id/all_classify_bt"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:foreground="?attr/selectableItemBackground"
                android:text="添加类别"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/find_goods_cd"
                android:layout_marginLeft="50dp"/>

            <Button
                android:id="@+id/all_goods_bt"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:foreground="?attr/selectableItemBackground"
                android:text="添加商品"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/all_classify_bt"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <!--<TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textSize="14sp"
                android:textColor="@color/grey_333333"
                android:text="图片"/>-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textSize="14sp"
                android:textColor="@color/grey_333333"
                android:text="名称"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/grey_333333"
                android:text="条码"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textSize="14sp"
                android:textColor="@color/grey_333333"
                android:gravity="center"
                android:text="类别"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/grey_333333"
                android:text="售价"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/grey_333333"
                android:text="库存"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/grey_333333"
                android:text="操作"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_dddddd"/>

        <easyrecyclerview.EasyRecyclerView
            android:id="@+id/all_goods_erv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

        </easyrecyclerview.EasyRecyclerView>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.design.widget.CoordinatorLayout>
